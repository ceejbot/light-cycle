{
  "name": "light-cycle",
  "description": "a consistent hash ring for your blue-glowing shards",
  "version": "1.2.0",
  "author": "C J Silverio <ceejceej@gmail.com>",
  "bugs": {
    "url": "https://github.com/ceejbot/light-cycle/issues"
  },
  "config": {
    "blanket": {
      "pattern": "index.js",
      "data-cover-never": [
        "node_modules",
        "test"
      ],
      "output-reporter": "spec"
    },
    "travis-cov": {
      "threshold": 90
    }
  },
  "contributors": [
    "C J Silverio <ceejceej@gmail.com>",
    "Kit Cambridge <kitcambridge@me.com>"
  ],
  "dependencies": {
    "mocoverage": "~1.0.0",
    "skiplist": "~1.0.0",
    "xxhash": "~0.2.1"
  },
  "devDependencies": {
    "blanket": "^1.1",
    "chai": "~2.1.2",
    "coveralls": "~2.11.2",
    "mocha": "~2.1.0",
    "mocha-lcov-reporter": "0.0.2",
    "travis-cov": "^0.2"
  },
  "homepage": "https://github.com/ceejbot/light-cycle",
  "keywords": [
    "hashing",
    "hash ring",
    "consistent hash",
    "consistent hash ring",
    "sharding"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": "git://github.com/ceejbot/light-cycle.git",
  "scripts": {
    "travis": "npm run test-suite && npm run test-cov && npm run coveralls",
    "test": "mocha --check-leaks --ui exports --require blanket -R mocoverage test/test*.js",
    "test-cov": "mocha --require blanket -R travis-cov test/*.js",
    "coverage": "mocha --require blanket -R html-cov test/*.js > test/coverage.html",
    "coveralls": "NODE_ENV=test YOURPACKAGE_COVERAGE=1 mocha --require blanket --reporter mocha-lcov-reporter test/*.js | ./node_modules/coveralls/bin/coveralls.js"
  }
}
